<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.galilinetsky.moneywatcher">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dollar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_dollar_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivities.MainActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.charts"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".SideActivities.Calendar" />
        <activity
            android:name=".MainActivities.submition"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SideActivities.Settings"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".SideActivities.notification"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".SideActivities.createCategories"
            android:noHistory="true"/>
        <activity android:name=".SideActivities.AddOrRemove"
            android:noHistory="true"/>
        <activity android:name=".SideActivities.RemoveCtg"></activity>
    </application>

</manifest>